<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prabhat.tester_app.CaseEvaluationActivity"
    android:background="@drawable/humanbody">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Arm"
        android:id="@+id/rightarm"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Head"
        android:id="@+id/head"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Arm"
        android:id="@+id/leftarm"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Torso/abdomen"
        android:id="@+id/tabdo"
        android:checked="false"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/leftarm"
        android:layout_alignStart="@+id/head" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Leg"
        android:id="@+id/rightleg"
        android:layout_marginTop="92dp"
        android:checked="false"
        android:layout_below="@+id/rightarm"
        android:layout_toStartOf="@+id/leftleg" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left Leg"
        android:id="@+id/leftleg"
        android:checked="false"
        android:layout_alignTop="@+id/rightleg"
        android:layout_toStartOf="@+id/leftarm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Report"
        android:id="@+id/sendreport"
        android:layout_alignTop="@+id/head"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Route"
        android:id="@+id/getroute"
        android:layout_alignTop="@+id/head"
        android:layout_alignEnd="@+id/leftarm" />
</RelativeLayout>
